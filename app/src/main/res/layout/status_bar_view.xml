<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/statusViewNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:text="@string/processing"/>

    <LinearLayout
        android:id="@+id/statusBarHolderLayout"
        android:layout_width="match_parent"
        android:layout_below="@id/statusViewNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/status_bar_bg"
        android:layout_height="10dp">

        <View
            android:id="@+id/statusBarStatusIndicator"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@drawable/green_status_bg"/>
    </LinearLayout>
</RelativeLayout>