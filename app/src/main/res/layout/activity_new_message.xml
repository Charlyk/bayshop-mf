<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context="com.softranger.bayshopmf.ui.contact.NewMessageActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbarAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navigationIcon="@mipmap/ic_back_24dp">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/new_message"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/subjectlayout"
        android:layout_below="@id/toolbarAppBarLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="@string/subject"
            android:id="@+id/subjectTitleLabel"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/subjectInput"
            android:textSize="18sp"
            android:hint="What issue are you facing?"
            android:background="@android:color/white"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:id="@+id/subjectBottomSeparator"
        android:layout_below="@id/subjectlayout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ededed"/>

    <RelativeLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:onClick="showSpinner"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@id/subjectBottomSeparator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:text="@string/category"
            android:id="@+id/categoryTitleLabel"/>

        <TextView
            android:id="@+id/categoryNameLabel"
            android:layout_toRightOf="@id/categoryTitleLabel"
            android:layout_toEndOf="@id/categoryTitleLabel"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="Orders"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/categorySelectorSpinner"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/categoryBottomSeparator"
        android:layout_below="@id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ededed"/>

    <LinearLayout
        android:layout_below="@id/categoryBottomSeparator"
        android:id="@+id/priorityLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="@string/priority"
            android:id="@+id/textView19"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textColor="#898989"
                android:layout_weight="1"
                android:text="@string/low"
                android:id="@+id/radioButton"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#898989"
                android:layout_weight="1"
                android:text="@string/high"
                android:id="@+id/radioButton2"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#898989"
                android:layout_weight="1"
                android:text="@string/medium"
                android:id="@+id/radioButton3"/>
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_below="@id/priorityLayout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ededed"
        android:id="@+id/view2"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textSize="18sp"
        android:padding="16dp"
        android:hint="@string/type_your_message"
        android:id="@+id/editText"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
