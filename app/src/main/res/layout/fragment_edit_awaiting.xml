<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            tools:context="com.softranger.bayshopmf.ui.EditAwaitingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/warehouse"/>

            <RadioGroup
                android:id="@+id/editAwaitingStorageSelectorGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/editAwaitingUsaSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/us_storage_selection"
                    android:button="@null"/>

                <RadioButton
                    android:id="@+id/editAwaitingUkSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/uk_storage_selection"
                    android:button="@null"/>

                <RadioButton
                    android:id="@+id/editAwaitingDeSelector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/de_storage_selection"
                    android:button="@null"/>
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"/>

        <EditText
            android:id="@+id/editAwaitingNameInput"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_rectangle_bg"
            android:hint="@string/ipad_mini"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tracking_number"/>

        <EditText
            android:id="@+id/editAwaitingTrackingInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_rectangle_bg"
            android:hint="12345678901234567890"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/link_to_the_product_ordered_by_you"/>

        <EditText
            android:id="@+id/editAwaitingUrlInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:inputType="textUri"
            android:background="@drawable/edit_text_rectangle_bg"
            android:hint="http://example-shop.com/example-product"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/price"/>

        <EditText
            android:id="@+id/editAwaitingPriceInput"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/edit_text_rectangle_bg"
            android:ems="10"
            android:hint="23.5"
            android:inputType="numberDecimal"
            android:padding="3dp"/>

        <Button
            android:id="@+id/editAwaitingSaveButton"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/save"
            android:textColor="@color/colorGreenAction"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>
