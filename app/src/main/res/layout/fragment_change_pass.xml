<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:clickable="true"
              tools:context="com.softranger.bayshopmf.ui.settings.ChangePassFragment">

    <RelativeLayout
        android:id="@+id/currentPassLayout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?actionBarSize"
        android:paddingTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/currentPassIcon"
            android:src="@mipmap/ic_change_password_36dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/currentPassIcon"
            android:layout_toEndOf="@id/currentPassIcon"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_password"
                android:id="@+id/currentPassTitleLabel"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/currentPassInput"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/currentPassDivider"
        android:layout_width="match_parent"
        android:layout_below="@id/currentPassLayout"
        android:layout_height="0.5dp"
        android:background="#ededed"/>

    <RelativeLayout
        android:id="@+id/newPassLayout"
        android:layout_below="@id/currentPassDivider"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:paddingTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/newPassIcon"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_change_password_open_36dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/newPassIcon"
            android:layout_toEndOf="@id/newPassIcon"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_a_new_password"
                android:id="@+id/newPassTitleLabel"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/newPassInput"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/newPassDivider"
        android:layout_width="match_parent"
        android:layout_below="@id/newPassLayout"
        android:layout_height="0.5dp"
        android:background="#ededed"/>

    <RelativeLayout
        android:id="@+id/confirmPassLayout"
        android:layout_below="@id/newPassDivider"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:id="@+id/confirmPassIcon"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_change_password_open_36dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/confirmPassIcon"
            android:layout_toEndOf="@id/confirmPassIcon"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_password"
                android:id="@+id/confirmPassTitleLabel"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/confirmPassInput"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/confirmPassDivider"
        android:layout_below="@id/confirmPassLayout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="#ededed"/>

    <View
        android:id="@+id/changePassFocusIndicator"
        android:layout_width="5dp"
        android:layout_height="?actionBarSize"
        android:background="@color/colorAccent"/>

    <Button
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="@string/save"
        android:textSize="18sp"
        android:id="@+id/changePassSaveButton"
        android:background="@drawable/green_button_bg"
        android:textColor="@android:color/white"/>
</RelativeLayout>
