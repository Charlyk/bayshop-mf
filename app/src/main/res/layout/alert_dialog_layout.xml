<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/topDialogBarLayout"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alertDialogImageLabel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@mipmap/ic_delete_box_24dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/alertDialogTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="New Text"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_margin="16dp"
        android:layout_gravity="center_vertical"
        android:text="New Text"
        android:id="@+id/alertDialogMessageLabel"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="?selectableItemBackground"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="17sp"
            tools:text="No"
            android:textStyle="bold"
            android:id="@+id/alertDialogNegativeButton"/>

        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="?selectableItemBackground"
            android:textSize="17sp"
            tools:text="Yes"
            android:textStyle="bold"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/alertDialogPositiveButton"/>
    </LinearLayout>
</LinearLayout>