<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softranger.bayshopmfr.util.widget.CameraActivity">

    <FrameLayout
        android:id="@+id/cameraHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.softranger.bayshopmfr.util.widget.CircleOverlayView
        android:id="@+id/circleFrameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/noOverlayBg"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/black_semi_transparent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/captureBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/camera_btn"
        android:layout_margin="16dp"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:contentDescription="@string/take_photo"/>

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:visibility="gone"
        android:textColor="@android:color/white"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"/>
</RelativeLayout>
