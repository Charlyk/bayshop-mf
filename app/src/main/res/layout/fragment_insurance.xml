<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                tools:context=".ui.instock.buildparcel.InsuranceFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/fillDeclarationMethodsTabLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/fillDeclarationMethodsTabLayout"
        android:background="#c3bebebe"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fillDeclarationMethodsHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fillDeclarationMethodsTabLayout"/>
</RelativeLayout>
