<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:id="@+id/uploadDocumentLayout"
              android:orientation="vertical">

    <TextView
        android:id="@+id/prohibitionHeldReasonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/this_product_is_held_by_customs"
        android:textColor="@color/colorAccent"
        android:drawableLeft="@mipmap/ic_vama_leuseni_48dp"
        android:drawableStart="@mipmap/ic_vama_leuseni_48dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#b1b1b1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/prohibitionHeldUploadDocumentBtn"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:drawableLeft="@mipmap/ic_document_24dp"
            android:drawableStart="@mipmap/ic_document_24dp"
            android:drawablePadding="6dp"
            android:background="?selectableItemBackground"
            android:text="@string/upload_document"
            android:textColor="@color/colorGreenAction"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/prohibitionHeldTakePhotoBtn"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableRight="@mipmap/ic_photo_24dp"
            android:drawableEnd="@mipmap/ic_photo_24dp"
            android:drawablePadding="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="?selectableItemBackground"
            android:text="@string/take_photo"
            android:textColor="@color/colorGreenAction"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="#b1b1b1"/>
</LinearLayout>