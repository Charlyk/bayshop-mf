<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sentParcelHeaderLayout"
                xmlns:tools="http://schemas.android.com/tools"
                android:minHeight="?actionBarSize"
                android:background="@android:color/white">

    <ImageButton
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sentParcelDetailsBtn"
        android:layout_centerVertical="true"
        android:background="?selectableItemBackground"
        android:layout_marginRight="16dp"
        android:src="@mipmap/ic_detail_24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:id="@+id/snetParcelTrackingNumberHolder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toLeftOf="@id/sentParcelDetailsBtn"
        android:layout_toStartOf="@id/sentParcelDetailsBtn">

        <TextView
            android:id="@+id/sentParcelTrackingNumberTitle"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/tracking"/>

        <TextView
            android:id="@+id/sentParcelTrackingNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            tools:text="925487230874203984"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/sentParcelDetailsBtn"
        android:background="#b1b1b1"/>
</RelativeLayout>