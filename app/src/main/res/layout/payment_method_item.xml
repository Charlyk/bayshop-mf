<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:gravity="center_vertical"
                android:background="?selectableItemBackground"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/replenishmentMethodTypeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/replenishmentRadioBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <ImageButton
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_detail_24dp"
        android:background="?selectableItemBackground"
        android:id="@+id/replenishmentDetailsBtn"
        android:layout_toLeftOf="@+id/replenishmentRadioBtn"
        android:layout_toStartOf="@+id/replenishmentRadioBtn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="$386"
        android:id="@+id/replenishmentAmountLabel"
        android:layout_toLeftOf="@+id/replenishmentDetailsBtn"
        android:layout_toStartOf="@+id/replenishmentDetailsBtn"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/replenishmentAmountLabel"
        android:layout_toStartOf="@id/replenishmentAmountLabel"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@id/replenishmentMethodTypeImage"
        android:layout_toEndOf="@id/replenishmentMethodTypeImage"
        android:layout_centerVertical="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Credit card (Bpay)"
            android:id="@+id/replenishmentMethodName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3% commision"
            android:id="@+id/replenishmentCommissionLabel"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/linearLayout"
        android:background="#b1b1b1"/>
</RelativeLayout>