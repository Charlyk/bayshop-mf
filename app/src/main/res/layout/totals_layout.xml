<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#8db842"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp">

    <Button
        android:id="@+id/totalsViewCreateBtn"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/yellow_btn_bg"
        android:maxWidth="120dp"
        android:text="@string/create_parcel"
        android:textColor="@android:color/white"/>

    <RelativeLayout
        android:id="@+id/totalsViewWeightLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/totalsViewWeightTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:text="@string/weight"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/totalsViewWeightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/totalsViewWeightTitle"
            android:text="@string/_0_0"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/totalsViewPriceLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/totalsViewWeightLayout"
        android:layout_toEndOf="@id/totalsViewWeightLayout">

        <TextView
            android:id="@+id/totalsViewPriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:text="@string/price"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/totalsViewPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/totalsViewPriceTitle"
            android:text="@string/_0_0"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
</RelativeLayout>