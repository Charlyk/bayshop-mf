<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text="@string/add_awaiting_alert"
            android:textColor="@color/colorAccent"/>

        <View
            android:layout_below="@id/textView7"
            android:id="@+id/addAwaitingWarningSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="#ededed"/>

        <LinearLayout
            android:layout_below="@id/addAwaitingWarningSeparator"
            android:id="@+id/addAwaitingLinkLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/addAwaitingLinkToTheProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/link_to_the_product_ordered_by_you"/>

            <EditText
                android:id="@+id/addAwaitingLinkToProductInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="@string/http_ebay_com"
                android:inputType="textUri"
                android:padding="3dp"
                android:singleLine="true"/>
        </LinearLayout>

        <View
            android:layout_below="@id/addAwaitingLinkLayout"
            android:id="@+id/addAwaitingLinkSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ededed"/>


        <LinearLayout
            android:layout_below="@id/addAwaitingLinkSeparator"
            android:id="@+id/addAwaitingTrackinglayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/addAwaitingTrackingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tracking_number"/>

            <EditText
                android:id="@+id/addAwaitingTrackingInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="@string/_12345678901234567890"
                android:padding="3dp"
                android:singleLine="true"/>
        </LinearLayout>

        <View
            android:layout_below="@id/addAwaitingTrackinglayout"
            android:id="@+id/addAwaitingTrackingSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ededed"/>

        <LinearLayout
            android:layout_below="@id/addAwaitingTrackingSeparator"
            android:id="@+id/addAwaitingNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/addAwaitingNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_name"/>

            <EditText
                android:id="@+id/addAwaitingNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="@string/ipad_mini"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:singleLine="true"/>
        </LinearLayout>

        <View
            android:layout_below="@id/addAwaitingNameLayout"
            android:id="@+id/addAwaitingNameSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ededed"/>

        <LinearLayout
            android:layout_below="@id/addAwaitingNameSeparator"
            android:id="@+id/addAwaitingPricelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/addAwaitingPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"/>

            <EditText
                android:id="@+id/addAwaitingPriceInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="@string/_400"
                android:inputType="numberDecimal"
                android:padding="3dp"
                android:singleLine="true"/>
        </LinearLayout>

        <View
            android:layout_below="@id/addAwaitingPricelayout"
            android:id="@+id/addAwaitingPriceSeparator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/drop_shadow"/>

        <View
            android:id="@+id/addAwaitingSmallSpaceHolder"
            android:layout_below="@id/addAwaitingPriceSeparator"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorDivider"/>

        <View
            android:id="@+id/addAwaitingSmallSpaceHolderSeparator"
            android:layout_below="@id/addAwaitingSmallSpaceHolder"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ededed"/>

        <RelativeLayout
            android:layout_below="@id/addAwaitingSmallSpaceHolderSeparator"
            android:id="@+id/addAwaitingParcelPrecheckBtn"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?selectableItemBackground"
            android:orientation="horizontal"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/checkCheckBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/textView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/check_product"
                android:textColor="@android:color/black"/>
        </RelativeLayout>

        <View
            android:layout_below="@id/addAwaitingParcelPrecheckBtn"
            android:id="@+id/addAwaitingParcelPrecheckBtnSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ededed"/>

        <RelativeLayout
            android:layout_below="@id/addAwaitingParcelPrecheckBtnSeparator"
            android:id="@+id/addAwaitingAdditionalPhotoBtn"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?selectableItemBackground"
            android:orientation="horizontal"
            android:padding="16dp">


            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/additional_photo"
                android:textColor="@android:color/black"/>

            <CheckBox
                android:id="@+id/photosCheckBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_below="@id/addAwaitingAdditionalPhotoBtn"
            android:id="@+id/addAwaitingAdditionalPhotoBtnSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ededed"/>

        <RelativeLayout
            android:layout_below="@id/addAwaitingAdditionalPhotoBtnSeparator"
            android:id="@+id/addAwaitingRepackingBtn"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?selectableItemBackground"
            android:orientation="horizontal"
            android:padding="16dp">


            <CheckBox
                android:id="@+id/repackingCheckBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/repacking"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/addAwaitingRepackingBtnSeparator"
            android:layout_below="@id/addAwaitingRepackingBtn"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/drop_shadow"/>

        <LinearLayout
            android:layout_below="@id/addAwaitingRepackingBtnSeparator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDivider"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/addAwaitingAddParcelButton"
                style="@style/Base.Widget.AppCompat.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:background="@drawable/green_button_bg"
                android:text="@string/add_parcel"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:id="@+id/addAwaitingInputFocusIndicator"
            android:layout_width="5dp"
            android:layout_height="70dp"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorAccent"/>
    </RelativeLayout>
</ScrollView>

