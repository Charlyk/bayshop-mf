<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/buildFirstStepMfIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="New Text"/>

    <ImageButton
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:id="@+id/buildFirstDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_delete_24dpi"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/buildFirstStepNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/buildFirstDeleteButton"
        android:layout_toStartOf="@id/buildFirstDeleteButton"
        android:textColor="@android:color/black"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/buildFirstStepMfIdLabel"
        android:text="New Text"/>

    <LinearLayout
        android:id="@+id/priceAndWeightHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buildFirstStepNameLabel"
        android:layout_toLeftOf="@id/buildFirstDeleteButton"
        android:layout_toStartOf="@id/buildFirstDeleteButton"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buildFirstStepPriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/price"/>

        <TextView
            android:id="@+id/buildFirstStepPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="$40"/>

        <TextView
            android:id="@+id/buildFirstStepWeghtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/weight"/>

        <TextView
            android:id="@+id/buildFirstStepWeghtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="1kg"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"
        android:layout_below="@id/priceAndWeightHolder"/>
</RelativeLayout>