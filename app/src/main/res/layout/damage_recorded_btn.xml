<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/damageRecordedLayout"
              android:visibility="gone"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:textSize="16sp"
            android:drawableLeft="@mipmap/ic_allow_shipping_24dp"
            android:drawableStart="@mipmap/ic_allow_shipping_24dp"
            android:drawablePadding="10dp"
            android:background="?selectableItemBackground"
            android:textColor="@color/colorGreenAction"
            android:text="@string/allow_shipping"
            android:id="@+id/damageAllowShipping"/>

        <ImageButton
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_detail_24dp"
            android:background="?selectableItemBackground"
            android:id="@+id/damageAllowShippingDetails"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:drawableLeft="@mipmap/ic_to_disband_24dp"
            android:drawableStart="@mipmap/ic_to_disband_24dp"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorGreenAction"
            android:text="@string/to_disband"
            android:id="@+id/damageToDisband"/>

        <ImageButton
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_detail_24dp"
            android:background="?selectableItemBackground"
            android:id="@+id/damageToDisbandDetails"/>
    </LinearLayout>
</LinearLayout>