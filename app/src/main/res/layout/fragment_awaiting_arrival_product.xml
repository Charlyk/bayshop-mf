<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.awaitingarrival.AwaitingArrivalProductFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_above="@+id/awaitingDetailsEditButton">

        <include layout="@layout/awaiting_arrival_product_details"/>
    </ScrollView>

    <Button
        android:id="@+id/awaitingDetailsEditButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_alignParentBottom="true"
        android:background="@drawable/green_button_bg"
        android:gravity="center"
        android:text="@string/edit_details"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/drop_shadow"
        android:layout_alignParentTop="true"/>
</RelativeLayout>