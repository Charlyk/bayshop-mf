<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:animateLayoutChanges="true"
              android:clickable="true"
              tools:context="com.softranger.bayshopmf.ui.settings.AutopackingFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:maxLines="3"
        android:layout_margin="16dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/lorem_ipsum"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <RelativeLayout
        android:id="@+id/autopackingOnOffButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/autopackingUseSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/autopackingUseSwitch"
            android:layout_toStartOf="@id/autopackingUseSwitch"
            android:layout_centerVertical="true"
            android:text="@string/use_autopacking"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <LinearLayout
        android:id="@+id/autopackingItemsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/autopackingAddressesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:padding="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/autopackingAddressImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/addresses"/>

            <TextView
                android:id="@+id/autopackingAddressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/autopackingAddressImage"
                android:layout_toEndOf="@id/autopackingAddressImage"
                android:textSize="18sp"
                android:text="@string/addresses"/>

            <TextView
                android:id="@+id/autopackingAddressLabel"
                android:layout_below="@id/autopackingAddressTitle"
                android:layout_toRightOf="@id/autopackingAddressImage"
                android:layout_toEndOf="@id/autopackingAddressImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Eduard Albu"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b1b1b1"/>

        <RelativeLayout
            android:id="@+id/autopackingShippingMethodBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:padding="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/autopackingShippingMethodImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/shipping_method"/>

            <TextView
                android:id="@+id/autopackingShippingMethodTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/autopackingShippingMethodImage"
                android:layout_toEndOf="@id/autopackingShippingMethodImage"
                android:textSize="18sp"
                android:text="@string/shipping_method"/>

            <TextView
                android:id="@+id/autopackingShippingMethodLabel"
                android:layout_below="@id/autopackingShippingMethodTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BayShop Air Post"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b1b1b1"/>

        <RelativeLayout
            android:id="@+id/autopackingInsuraceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:padding="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/autopackingInsuranceImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/insurance"/>

            <TextView
                android:id="@+id/autopackingInsuranceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/autopackingInsuranceImage"
                android:layout_toEndOf="@id/autopackingInsuranceImage"
                android:textSize="18sp"
                android:text="@string/insurance"/>

            <TextView
                android:id="@+id/autopackingInsuranceLabel"
                android:layout_below="@id/autopackingInsuranceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/autopackingInsuranceImage"
                android:layout_toEndOf="@id/autopackingInsuranceImage"
                tools:text="Insurance selectedt"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b1b1b1"/>

        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:textColor="@android:color/white"
            android:background="@drawable/green_button_bg"
            android:text="@string/save"
            android:id="@+id/autopackingSaveBtn"
            android:layout_gravity="end"/>
    </LinearLayout>

</LinearLayout>
