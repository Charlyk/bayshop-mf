<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@android:color/white"
    tools:context="com.softranger.bayshopmf.ui.payment.PaymentDetailsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#e6e6e6"
        tools:text="Description of this transaction"
        android:id="@+id/paymentDetailsDescriptionLabel"
        android:textColor="@android:color/black"
        android:textSize="17sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:drawableLeft="@mipmap/ic_transfer_36dp"
            android:drawableStart="@mipmap/ic_transfer_36dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/amount"
            android:id="@+id/textView34"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            tools:text="$30"
            android:textColor="@color/colorAccent"
            android:id="@+id/paymentDetailsAmountLabel"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:drawableLeft="@mipmap/ic_money_36dp"
            android:drawableStart="@mipmap/ic_money_36dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/total_amount"
            android:id="@+id/textView25"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            tools:text="$150"
            android:textColor="@color/colorGreenAction"
            android:id="@+id/paymentDetailsTotalAmountLabel"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:drawableLeft="@mipmap/ic_time_date_36dp"
            android:drawableStart="@mipmap/ic_time_date_36dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/date_and_time"
            android:id="@+id/textView32"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            tools:text="25 Mar 2016 16:22"
            android:id="@+id/paymentDetailsDateTimeLabel"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black"
            android:drawableLeft="@mipmap/ic_transaction_36dp"
            android:drawableStart="@mipmap/ic_transaction_36dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/transaction_id"
            android:id="@+id/textView36"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            tools:text="M4324234NF"
            android:id="@+id/paymentDetailsTransactionIdLabel"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>
</LinearLayout>
