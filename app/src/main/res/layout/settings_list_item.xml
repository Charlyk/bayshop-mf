<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="?selectableItemBackground"
                android:clickable="true">

    <ImageView
        android:id="@+id/settingsItemIconLabel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        tools:src="@mipmap/ic_in_processing"
        android:layout_marginRight="16dp"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/settingsItemTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/settingsItemIconLabel"
        android:layout_toRightOf="@id/settingsItemIconLabel"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="User data"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#b1b1b1"/>
</RelativeLayout>