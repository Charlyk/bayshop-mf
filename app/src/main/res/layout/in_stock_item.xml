<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@drawable/selectable_background"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/inStockItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_uncheck_45dp"/>

    <LinearLayout
        android:id="@+id/inStockItemDataLayout"
        android:layout_toRightOf="@id/inStockItemImage"
        android:layout_toEndOf="@id/inStockItemImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inStockUidLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Product name text"
            android:textColor="@color/colorAccent"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/inStockDescriptionlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            tools:text="Some product description"/>

        <com.softranger.bayshopmf.util.widget.ParcelStatusBarView
            android:id="@+id/inStockStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:labelFor="@id/inStockStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/inStockDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/date"/>

            <TextView
                android:id="@+id/inStockWeightTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/weight"/>

            <TextView
                android:id="@+id/inStockWeightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/inStockWeightTitle"
                android:layout_alignLeft="@id/inStockWeightTitle"
                android:layout_alignStart="@id/inStockWeightTitle"
                android:textColor="@android:color/black"
                tools:text="10kg"/>

            <TextView
                android:id="@+id/inStockDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/inStockWeightLabel"
                android:layout_toLeftOf="@id/inStockWeightLabel"
                android:layout_below="@id/inStockDateTitle"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                tools:text="12.10.16 (3 days ago)"/>

            <TextView
                android:id="@+id/inStockPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="@string/price"/>

            <TextView
                android:id="@+id/inStockPriceLabel"
                android:layout_width="wrap_content"
                android:layout_below="@id/inStockPriceTitle"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                tools:text="$450"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/inStockTopDivider"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/inStockItemDataLayout"
        android:layout_marginBottom="16dp"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <View
        android:id="@+id/inStockBottomDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/inStockItemDataLayout"
        android:background="@drawable/drop_shadow"
        android:layout_marginTop="16dp"/> <!-- bottom space between inStockItems -->
</RelativeLayout>