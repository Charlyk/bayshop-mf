<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@android:color/white"
                tools:context="com.softranger.bayshopmf.ui.auth.ForgotResultFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        tools:text="@string/email_has_been_sent"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:id="@+id/resultFragmentSecondTitle"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/resultFragmentSecondTitle"
        tools:src="@mipmap/ic_forgot_your_password_250dp"
        android:id="@+id/resultFragmentImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultFragmentSecondTitle"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        tools:text="@string/reset_your_password"
        android:id="@+id/resultFragmentDescription"
        android:layout_gravity="center_horizontal"/>

    <Button
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:text="@string/done"
        android:background="@drawable/green_button_bg"
        android:textColor="@android:color/white"
        android:id="@+id/registerResultDoneButton"
        android:layout_gravity="center_horizontal"/>
</RelativeLayout>
