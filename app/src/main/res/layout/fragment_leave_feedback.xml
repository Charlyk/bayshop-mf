<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clickable="true"
        android:orientation="vertical"
        tools:context="com.softranger.bayshopmf.ui.pus.LeaveFeedbackFragment">

        <TextView
            android:id="@+id/leaveFeedbackUidLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="New Text"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/leaveFeedbackDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="New Text"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/received_date"/>

            <TextView
                android:id="@+id/leaveFeedbackDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <RatingBar
            android:id="@+id/leaveFeedbackRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBarTheme"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1"/>

        <TextView
            android:id="@+id/leaveFeedbackRatingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            tools:text="4.5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#b1b1b1"/>

        <EditText
            android:id="@+id/leaveFeedbackCommentLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_comment"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:gravity="start"
            android:padding="5dp"
            android:minHeight="200dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b1b1b1"/>

        <Button
            android:id="@+id/leaveFeedbackUploadPhotoBtn"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_upload_photo_35dp"
            android:drawableStart="@mipmap/ic_upload_photo_35dp"
            android:drawablePadding="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:gravity="start|center_vertical"
            android:text="@string/upload_photo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b1b1b1"/>

        <Button
            android:id="@+id/leaveFeedbackTakePhotoBtn"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:drawableLeft="@mipmap/ic_take_photo_35dp"
            android:drawableStart="@mipmap/ic_take_photo_35dp"
            android:drawablePadding="10dp"
            android:textColor="@color/colorAccent"
            android:gravity="start|center_vertical"
            android:text="@string/take_photo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b1b1b1"/>

        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:textColor="@android:color/white"
            android:layout_margin="16dp"
            android:minWidth="100dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:text="@string/send_comment"
            android:id="@+id/leaveFeedbackSendCommentBtn"
            android:background="@drawable/green_button_bg"
            android:layout_gravity="end"/>
    </LinearLayout>
</ScrollView>

