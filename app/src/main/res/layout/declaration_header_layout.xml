<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    app:elevation="4dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="@string/declaration_alert"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/depositTextLabel"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="USA"/>

        <TextView
            android:id="@+id/trackingNumberTitle"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="@string/tracking"/>

        <TextView
            android:id="@+id/trackingNumberLabel"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            tools:text="213124714612876312673"/>

        <TextView
            android:id="@+id/generalDescriptionTitle"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="@string/general_description"/>

        <EditText
            android:id="@+id/generalDescriptionLabel"
            android:background="@drawable/input_background"
            android:hint="@string/general_description"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:padding="2dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>