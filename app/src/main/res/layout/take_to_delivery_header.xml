<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/takeToDeliveryDetailsHeaderLayout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <LinearLayout
        android:id="@+id/takeToDeliveryDetailsCallBtn"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:clickable="true"
        android:background="?selectableItemBackground"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:drawableLeft="@mipmap/ic_call_30dp"
            android:drawableStart="@mipmap/ic_call_30dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:text="@string/call_courier"
            android:id="@+id/textView16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/courierMapView"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
</LinearLayout>