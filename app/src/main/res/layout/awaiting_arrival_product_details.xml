<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:clipToPadding="false"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:drawableLeft="@mipmap/ic_edit_declaration_30dp"
        android:drawableStart="@mipmap/ic_edit_declaration_30dp"
        android:drawablePadding="16dp"
        android:background="?selectableItemBackground"
        android:textColor="@color/colorAccent"
        android:text="@string/edit_details"
        android:id="@+id/awaitingDetailsEditButton"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:id="@+id/awaitingDetailsAdditionalPhotosBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:drawableTop="@mipmap/ic_aditional_photo_85dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:background="?selectableItemBackground"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/pre_order_photos"/>

        <Button
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:id="@+id/awaitingDetailsCheckProductBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="center_horizontal"
            android:drawableTop="@mipmap/ic_check_product_75dp"
            android:textColor="@android:color/black"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:text="Pre-order checking"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="#b1b1b1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/awaitingDetailsStorageIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            tools:src="@mipmap/ic_uk_flag"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_toEndOf="@id/awaitingDetailsStorageIcon"
            android:layout_toRightOf="@id/awaitingDetailsStorageIcon"
            android:textSize="18sp"
            tools:text="MF3121241412"
            android:id="@+id/awaitingDetailsItemId"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            tools:text="Product name will be here"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:layout_below="@id/awaitingDetailsStorageIcon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/awaitingDetailsProductName"/>

        <ImageButton
            android:id="@+id/awaitingDetailsDeleteButton"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_delete_24dpi"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#b1b1b1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tracking"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="12sp"
        android:id="@+id/awaitingDetailsTrackingTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        tools:text="12312312312431213"
        android:id="@+id/awaitingDetailsProductTracking"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/date"
                android:id="@+id/awaitingDetailsDateTitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                tools:text="20.05.2016"
                android:id="@+id/awaitingDetailsDate"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/price"
                android:id="@+id/awaitingDetailsPriceTitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                tools:text="400$"
                android:id="@+id/awaitingDetailsPrice"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/weight"
                android:id="@+id/awaitingDetailsWeightTitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="@string/kg"
                android:id="@+id/awaitingDetailsWeight"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#b1b1b1"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/awaitingArrivalDetailsImageList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <include layout="@layout/no_photos_layout"/>
</LinearLayout>