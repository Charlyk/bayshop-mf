<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/awaitingArrivalDetailsLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clipToPadding="false"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/awaitingDetailsAdditionalPhotosBtn"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:drawableLeft="@mipmap/additional_photo_55dp"
            android:drawableStart="@mipmap/additional_photo_55dp"
            android:text="@string/pre_order_photos"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/awaitingDetailsCheckProductBtn"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:drawableLeft="@mipmap/check_product_55dp"
            android:drawableStart="@mipmap/check_product_55dp"
            android:text="@string/pre_order_checking"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#ededed"
        android:id="@+id/view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/awaitingDetailsStorageIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            tools:src="@mipmap/ic_uk_flag"/>

        <TextView
            android:id="@+id/awaitingDetailsItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/awaitingDetailsStorageIcon"
            android:layout_toRightOf="@id/awaitingDetailsStorageIcon"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            tools:text="MF3121241412"/>

        <TextView
            android:id="@+id/awaitingDetailsProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/awaitingDetailsStorageIcon"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="Product name will be here"/>

        <ImageButton
            android:id="@+id/awaitingDetailsDeleteButton"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/awaitingDetailsProductName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_delete_24dpi"/>

        <com.softranger.bayshopmf.util.widget.ParcelStatusBarView
            android:id="@+id/awaitingArrivalStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/awaitingDetailsDeleteButton"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>

    <TextView
        android:id="@+id/awaitingDetailsTrackingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/tracking"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/awaitingDetailsProductTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="12312312312431213"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#b1b1b1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/awaitingDetailsDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/awaitingDetailsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                tools:text="20.05.2016"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/awaitingDetailsPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/awaitingDetailsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                tools:text="400$"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/awaitingDetailsWeightTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/awaitingDetailsWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kg"
                android:textColor="@android:color/black"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/no_photos_layout"/>
</LinearLayout>