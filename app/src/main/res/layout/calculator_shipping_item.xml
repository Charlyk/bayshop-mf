<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        tools:text="BayShop Air Post"
        android:id="@+id/calculatorShippingNameLabel"/>

    <ImageButton
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="?selectableItemBackground"
        android:src="@mipmap/ic_detail_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/calculatorShippingDetailsBtn"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/calculatorShippingDetailsBtn"
        android:layout_toStartOf="@id/calculatorShippingDetailsBtn"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        tools:text="$13"
        android:id="@+id/calculatorShippingPriceLabel"/>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/calculatorShippingDetailsBtn"
        android:layout_height="0.5dp"
        android:background="#b1b1b1"/>
</RelativeLayout>