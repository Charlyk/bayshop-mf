<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/pusItemHolder"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selectable_background"
              android:layout_marginBottom="10dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/pusItemCodeNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            tools:text="PUS2131432133"/>

        <com.softranger.bayshopmf.util.widget.ParcelStatusBarView
            android:id="@+id/pusItemStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pusItemCodeNumberLabel"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pusItemStatusBar"
            android:layout_alignStart="@+id/pusItemStatusBar"
            android:layout_below="@+id/pusItemStatusBar"
            android:text="@string/date"/>

        <TextView
            android:id="@+id/pusItemWeightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView47"
            android:layout_alignStart="@+id/textView47"
            android:layout_below="@+id/textView47"
            android:textColor="@android:color/black"
            tools:text="10kg"/>

        <TextView
            android:id="@+id/pusItemDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView45"
            android:layout_alignStart="@+id/textView45"
            android:layout_below="@+id/textView45"
            android:layout_toLeftOf="@id/pusItemWeightLabel"
            android:layout_toStartOf="@id/pusItemWeightLabel"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@android:color/black"
            tools:text="12.10.16 (3 days ago)"/>

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView45"
            android:layout_centerHorizontal="true"
            android:text="@string/weight"/>

        <TextView
            android:id="@+id/pusItemPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView47"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@android:color/black"
            tools:text="$450"/>

        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView47"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/price"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/drop_shadow"/>
</LinearLayout>