<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Button
        android:id="@+id/fill_declarationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_edit_declaration_26dp"
        android:drawableStart="@mipmap/ic_edit_declaration_26dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@drawable/declaration_btn_background"
        android:layout_gravity="center_horizontal"
        android:gravity="start|center_vertical"
        android:text="@string/fill_in_the_declaration"/>

    <Button
        android:id="@+id/check_productButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/check_product_icon"
        android:drawableStart="@drawable/check_product_icon"
        android:drawablePadding="16dp"
        android:textColor="@android:color/white"
        android:background="@drawable/additional_btns_bg"
        android:gravity="start|center_vertical"
        android:text="@string/check_product"/>

    <Button
        android:id="@+id/additional_photoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/additional_photo_btn_icon"
        android:drawableStart="@drawable/additional_photo_btn_icon"
        android:drawablePadding="16dp"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:gravity="start|center_vertical"
        android:background="@drawable/additional_btns_bg"
        android:text="@string/additional_photo"/>
</LinearLayout>