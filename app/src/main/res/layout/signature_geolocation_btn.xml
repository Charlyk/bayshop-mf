<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/receivedSignatureOnMapLayout">
    <View
        android:id="@+id/topSeparator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="#b1b1b1"/>

    <Button
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signature"
        android:id="@+id/signatureButton"
        android:layout_below="@id/topSeparator"
        android:textColor="@color/colorGreenAction"
        android:background="?selectableItemBackground"
        android:drawableLeft="@mipmap/ic_place_24dp"
        android:drawableStart="@mipmap/ic_place_24dp"
        android:drawablePadding="10dp"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        style="@style/Base.Widget.AppCompat.ActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/geolocation"
        android:id="@+id/geolocationButton"
        android:layout_below="@id/topSeparator"
        android:drawableLeft="@mipmap/ic_place_24dp"
        android:drawableStart="@mipmap/ic_place_24dp"
        android:background="?selectableItemBackground"
        android:drawablePadding="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorGreenAction"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/geolocationButton"
        android:background="#b1b1b1"/>
</RelativeLayout>