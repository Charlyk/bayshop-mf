<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/orderHomeDeliveryLayout"
                android:clickable="true"
                android:background="@drawable/green_button_bg">

    <TextView
        android:id="@+id/localDepotOrderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableLeft="@mipmap/ic_order_delivery_30dp"
        android:drawableStart="@mipmap/ic_order_delivery_30dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/order_delivery"/>
</RelativeLayout>