<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
        android:text="@string/take_photo"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:background="@drawable/selectable_background"
        android:textSize="16sp"
        android:drawableLeft="@mipmap/ic_take_photo_30dp"
        android:drawableStart="@mipmap/ic_take_photo_30dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:textColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uploadDialogTakePhoto"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#ededed"/>

    <TextView
        android:text="@string/upload_photo"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/selectable_background"
        android:textSize="16sp"
        android:drawableLeft="@mipmap/ic_upload_photo_30dp"
        android:drawableStart="@mipmap/ic_upload_photo_30dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:textColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uploadDialogUploadPhoto"/>
</LinearLayout>